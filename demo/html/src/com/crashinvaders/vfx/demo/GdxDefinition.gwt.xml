<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://www.gwtproject.org/doctype/2.8.0/gwt-module.dtd">
<module rename-to="html">
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
	<inherits name='com.github.czyzby.lml.GdxLml' />

	<inherits name='com.crashinvaders.vfx.GdxVfxCore' />
	<inherits name='com.crashinvaders.vfx.GdxVfxEffects' />
	<inherits name='com.crashinvaders.vfx.GdxVfxGwt' />
	<inherits name='com.crashinvaders.vfx.DemoCore' />

	<source path="client">
		<include name="**/*"/>
	</source>

	<entry-point class='com.crashinvaders.vfx.demo.client.HtmlLauncher' />

	<set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>
	<set-configuration-property name="gdx.assetpath" value="../assets" />

	<!--This will turn logger window on/off-->
	<inherits name="com.google.gwt.logging.Logging"/>
</module>
